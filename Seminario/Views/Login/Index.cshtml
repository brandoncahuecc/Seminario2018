@model Seminario.Models.UsuarioLogin

@{
    ViewBag.Title = "Iniciar Sesión";
}

<style>
    .boton {
        background-color: navy;
        border-color: navy;
        border-radius: 10px;
        width: 100%;
    }

    .panel-heading {
        background-color: navy !important;
        color: white !important;
        text-align: center;
    }

    .panel {
        border-color: navy;
    }

    .panel-footer {
        background-color: navy;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="col-md-4 col-md-offset-4">
            <br />
            <br />
            <br />

            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3>Inicio de Sesión</h3>
                </div>
                <div class="panel-body">

                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.EditorFor(c => c.User, new { htmlAttributes = new { @class = "form-control", @placeholder = "Usuario" } })
                    </div>
                    @Html.ValidationMessageFor(c => c.User, "", new { @class = "text-danger" })

                    <br />
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.EditorFor(c => c.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Contraseña" } })
                    </div>
                    @Html.ValidationMessageFor(c => c.Password, "", new { @class = "text-danger" })
                    <br />
                    @if (ViewBag.Mensaje != null)
                    {
                        <div class="form-group">
                            <div class="col-md-12">
                                <FONT color="red">@ViewBag.Mensaje</FONT>
                            </div>
                        </div>
                    }
                    <br />
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-info btn-block boton"><i class="glyphicon glyphicon-log-in"></i>&nbsp;Ingresar</button>
                    </div>
                </div>
                <div class="panel-footer">

                </div>
            </div>
        </div>
        <div class="row"></div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
