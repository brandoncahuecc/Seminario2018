            @Html.DisplayNameFor(model => model.Denunciante)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Observaciones)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
