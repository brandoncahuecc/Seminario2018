@model IEnumerable<Seminario.Models.Lugar>

@{
    ViewBag.Title = "Lugares";
}


<table class="table">
    <tr>
        <td>
            <h2>Lugares</h2>
        </td>
        <td>
            <h2>@Html.ActionLink("Nuevo Lugar", "Create", null, new { @class = "btn btn-primary" })</h2>
        </td>
    </tr>
    <tr>
        <td>
            <h4>@ViewBag.Mensaje</h4>
        </td>
    </tr>
</table>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Municipio.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Municipio.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-info" })
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
