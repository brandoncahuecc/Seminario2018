<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - EPO</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("head_scripts", required: false)

    <style>
        .navbar-inverse {
            background-color: navy;
            border-color: navy;
        }

            .navbar-inverse .navbar-brand,
            .navbar-inverse .navbar-brand {
                color: white;
                background-color: transparent;
            }

            .navbar-inverse .navbar-nav > li > a,
            .navbar-inverse .navbar-nav > li > a {
                color: white;
                background-color: transparent;
            }

        footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 50px;
            background-color: navy;
            color: white;
            text-align: center;
        }
    </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a href="@Url.Action("Index", "Home")" title="List View" class="links">
                    <img src="~/images/pnc.png" width="60" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                @if (Request.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Municipios", "Index", "Municipios")  </li>
                        <li>@Html.ActionLink("Usuarios", "Index", "Usuarios")  </li>
                        <li>@Html.ActionLink("Lugares", "Index", "Lugares")  </li>
                        <li>@Html.ActionLink("Delitos", "Index", "Delitos")  </li>
                        <li>@Html.ActionLink("Hechos Delictivos", "Index", "HechosDelictivos")  </li>
                        <li>@Html.ActionLink("FAES", "Index", "Faes")  </li>
                    </ul>


                    <ul class="nav navbar-nav navbar-right">
                        <li><a><i class="glyphicon glyphicon-user"></i>&nbsp;@ViewBag.Mensaje</a></li>
                        <li>
                            <a href="@Url.Action("Logoff", "Login")" title="List View" class="links">
                                <i class="glyphicon glyphicon-log-out"></i>&nbsp;Salir
                            </a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <footer>
        <br />
        <p>&copy; Seminaristas UMG @DateTime.Now.Year</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
